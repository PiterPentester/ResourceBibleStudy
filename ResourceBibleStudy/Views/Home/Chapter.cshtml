@using ResourceBibleStudy.Core.Dto
@{
    ViewBag.Title = "Resource Bible Study";
    var readingContent = ViewBag.ReadingContent.ToString();
    var readingTitle = ViewBag.ReadingTitle.ToString();
    var currentChapter = (int)ViewBag.ChapterId;
    var currentTranslation = (Translation)ViewBag.Translation;
    var bookId = (int)ViewBag.BookId;
    var allTranslations = (IEnumerable<Translation>)ViewBag.Translations;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Resource Bible Study</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#">Home</a>
            </li>
            <li>
                <a>Extras</a>
            </li>
            <li>
                <a href="@Url.Action("Index")">Bible</a>
            </li>

        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>


<div class="wrapper wrapper-content  animated fadeInRight article">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row pull-right">

                    </div>

                    <div class="pull-right tooltip-demo">
                        <input id="chapterId" type="hidden" value="@currentChapter" class="form-control">
                        <input id="bookId" type="hidden" value="@bookId" class="form-control">
                        <div class="col-sm-3">
                            <span class="btn btn-white next_previous_chapter" data-url="@Url.Action("next_previous", new {  direction = "previous"})" data-toggle="tooltip" data-placement="top" title="" data-original-title="previous scripture within a date">
                                <i class="fa fa-chevron-left"></i>
                            </span>
                        </div>
                        <div class="col-sm-3">
                            <span class="input-group " data-toggle="tooltip" data-placement="top" title="" data-original-title="select a date">
                                <button data-toggle="dropdown" class="btn btn-white dropdown-toggle" type="button" aria-expanded="false">
                                    <span class="fa fa-list"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    @foreach (var translation in allTranslations)
                                    {
                                        <li class="switch-translation" data-url="@(Url.Action("select_translation", "Home")+"?bibleVersion="+translation.Abbreviation)">
                                            <a href="#">@translation.Name</a>
                                        </li>
                                        <li class="divider"></li>
                                    }

                                </ul>

                            </span>
                        </div>
                        <div class="col-sm-3">
                            <span class="btn btn-white next_previous_chapter" data-url="@Url.Action("next_previous", new { direction = "next"})" data-toggle="tooltip" data-placement="top" title="" data-original-title="next scripture within a date">
                                <i class="fa fa-chevron-right"></i>
                            </span>
                        </div>

                        <div class="col-sm-3">
                            <a href="@Url.Action("BibleReading","Administrator", new {area="" })" class="btn btn-white" data-toggle="tooltip" data-placement="top" title="" data-original-title="open the bible"><i class="fa fa-book"></i> </a>
                        </div>

                    </div>
                    <div class="text-center article-title">
                        <span class="text-muted">
                            <i class="fa fa-folder-open"></i>
                            <input type="hidden" id="current-translation" value="@currentTranslation.Abbreviation" />
                            <text id="current-translation-name">
                                @currentTranslation.Name
                            </text>
                        </span>
                        <h1 id="readingTitle">
                            @readingTitle
                        </h1>
                    </div>
                    <span class="font-normal" id="readingContent">@Html.Raw(readingContent) </span>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Tags:</h5>
                            <button class="btn btn-primary btn-xs" type="button">Model</button>
                            <button class="btn btn-white btn-xs" type="button">Publishing</button>
                        </div>
                        <div class="col-md-6">
                            <div class="small text-right">
                                <h5>Stats:</h5>
                                <div> <i class="fa fa-comments-o"> </i> 56 comments </div>
                                <i class="fa fa-eye"> </i> 144 views
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>


</div>